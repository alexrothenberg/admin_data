<% if controller.send(:admin_data_is_allowed_to_update?) %>
  <div class="block">
    <h3>Modify Record</h3>
    <p><%= link_to 'Edit',:action => 'edit', :klass => klass, :id => model.id %> </p>
    <p>
      <%= link_to 'Delete', 
           delete_admin_data_on_model_path(:klass => @klass.name.underscore, :id => model.id),
           { :confirm => ' You are deleing a record. Are you sure?', :method => :delete} %> 
    </p>
    <p>
      <%= link_to 'Destroy',
        admin_data_on_model_path(:klass => @klass.name.underscore, :id => model.id),
        { :confirm => 'You are destroying a record. Are you sure?', :method => :delete} %>
    </p>
  </div>
<% end %>
